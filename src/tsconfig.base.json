{
	"compilerOptions": {
		"outDir": "../dist",
		"module": "commonjs",
		"target": "es2016",
		"lib": [
			"es2015",
			"es2015.collection",
			"es2017",
			"es2017.object",
			"dom" // for rxjs
		],
		"declaration": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
		"pretty": true,
		"rootDir": "./",
		"baseUrl": "./",
		"types": [ "node", "ava" ]
	},
	"exclude": [
		"node_modules"
	]
}
