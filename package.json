{
	"private": true,
	"name": "@anfema/grpc-code-generator",
	"version": "0.2.1",
	"description": "A code generator for gRPC",
	"license": "MIT",
	"main": "dist/main/index.js",
	"author": "AndreÃÅ Wachter <a.wachter@anfe.ma>",
	"scripts": {
		"postinstall": "npm run main.build",
		"build": "npm run main.build; npm run tests.gen; npm run tests.build",
		"dev": "npm run main.dev & npm run tests.dev & wait",
		"clean": "del dist/* src/tests/gen/*",
		"purge": "del node_modules",
		"tests": "npm run main.build; npm run tests.gen; npm run tests.build; npm run tests.run",
		"main.build": "tsc --project src/main",
		"main.dev": "tsc --watch --project src/main",
		"tests.gen": "node dist/main/main.js -o src/tests/gen src/tests/proto/test.proto",
		"tests.build": "tsc --project src/tests",
		"tests.dev": "tsc --watch --project src/tests",
		"tests.run": "ava --verbose"
	},
	"bin": {
		"grpc-code-generator": "dist/main/main.js"
	},
	"devDependencies": {
		"ava": "^0.25.0",
		"del-cli": "^1.1.0",
		"grpc": "^1.16.1",
		"uuid": "^3.1.0"
	},
	"dependencies": {
		"@types/node": "^10.5.5",
		"@types/uuid": "^3.4.3",
		"@types/yargs": "^11.0.0",
		"protobufjs": "~6.8.0",
		"typescript": "^3.0.1",
		"yargs": "^12.0.1"
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"ava": {
		"files": [
			"dist/tests/test*.js"
		],
		"concurrency": 4,
		"failFast": true,
		"failWithoutAssertions": false
	}
}
