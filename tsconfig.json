{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"module": "commonjs",
		"target": "es2017",
		"lib": [
			"es2015"
		],
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
		"pretty": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
